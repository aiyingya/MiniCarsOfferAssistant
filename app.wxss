/**app.wxss**/
@import 'css/weui.wxss';
@import 'lib/wux.wxss';

page{
    min-height: 100%;
	  background-color: #EFEFEF;
    font-size: 28rpx;
    font-family: "PingFangSC-Light";
}
.container {
  width: 100%;
	height: auto;
} 
/* search.*/
.search-wrap {
	width: 86.67%;
	height: 90rpx;
	margin: 0 auto;
	background-color: #fff;
	border-radius: 8rpx;
	position: relative;
}
.search-icon {
	position: absolute;
	width: 24rpx;
	height: 24rpx;
	top: 50%;
	margin-top: -12rpx;
	left: 27%;
}
.search-img {
	display: block;
	width: 100%;
	height: 24rpx;
}
.search-input {
	width: 100%;
	height: 90rpx;
	font-size: 30rpx;
}
.search-placeholder {
	color: #aaa;
	text-align: center;
	font-size: 30rpx;
	font-weight: 100;
	font-family: "PingFangSC-Regular";
}
.bindtap {
	position: absolute;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
	background: none;
	z-index: 99;
}
.nodata {
	width: 100%;
	line-height: 88rpx;
	color: #333;
	text-align: center;
}
.showToast {
	-webkit-animation: Toast 3500ms ease 1 forwards ;
	animation: Toast 3500ms ease 1 forwards ;
	-webkit-animation-play-state: running;
}
.active {
	background-color: #fafafa !important;
}
.popup-mask {
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	background: rgba(0, 0, 0, 0.6);
	z-index: 99;
}
@-webkit-keyframes Toast {
    0%,50%,80% { opacity: 1}
    100% { opacity: 0}
}
@keyframes Toast {
    0% , 50%,80% { opacity: 1}
    100% { opacity: 0}
}
.showMask {
	-webkit-animation: fadein 500ms ease 1 forwards ;
	animation: fadein 500ms ease 1 forwards ;
	-webkit-animation-play-state: running;
}
.hideMask {
	-webkit-animation: fadeout 100ms ease 1 forwards ;
	animation: fadeout 100ms ease 1 forwards ;
	-webkit-animation-play-state: running;
}
@-webkit-keyframes fadein {
	0% {opacity: 0}
  100% { opacity: 1}
}
@keyframes fadein {
  0% {opacity: 0}
  100% { opacity: 1}
}
@-webkit-keyframes fadeout {
	0% {opacity: 1}
  100% { opacity: 0}
}
@keyframes fadeout {
  0% {opacity: 1}
  100% { opacity: 0}
}
.rightToLeft {
    -webkit-animation: rightToLeft 600ms ease 100ms 1 forwards ;
            animation: rightToLeft 600ms ease 100ms 1 forwards ;
    -webkit-animation-play-state: running;
}
.leftToRight {
    -webkit-animation: leftToRight 600ms ease 100ms 1 forwards ;
            animation: leftToRight 600ms ease 100ms 1 forwards ;
    -webkit-animation-play-state: running;
}
.topToBottom {
    -webkit-animation: topToBottom 200ms ease 1 forwards ;
            animation: topToBottom 200ms ease 1 forwards ;
    -webkit-animation-play-state: running;
}
@-webkit-keyframes rightToLeft {
    from {
        -webkit-transform: translate3d(1000px, 0, 0);
        transform: translate3d(1000px, 0, 0)

    }
    to {
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0) ;
    }
}
@keyframes rightToLeft {
    from {
        -webkit-transform: translate3d(1000px, 0, 0);
        transform: translate3d(1000px, 0, 0)

    }
    to {
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0) ;
    }
}
@-webkit-keyframes leftToRight {
    from {
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0) ;
    }
    to {
        -webkit-transform: translate3d(1000px, 0, 0);
        transform: translate3d(1000px, 0, 0)
    }
}
@keyframes leftToRight {
    from {
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0) ;
    }
    to {
        -webkit-transform: translate3d(1000px, 0, 0);
        transform: translate3d(1000px, 0, 0)
    }
}
@-webkit-keyframes topToBottom {
	from {
		-webkit-transform: translate3d(0, 100rpx, 0);
  	transform: translate3d(0, 100rpx, 0) ;
	}
	to {
		-webkit-transform: translate3d(0, 0, 0);
  	transform: translate3d(0, 0, 0) ;
	}
}
@keyframes topToBottom {
  from {
		-webkit-transform: translate3d(0, 100rpx, 0);
  	transform: translate3d(0, 100rpx, 0) ;
	}
	to {
		-webkit-transform: translate3d(0, 0, 0);
  	transform: translate3d(0, 0, 0) ;
	}
}
