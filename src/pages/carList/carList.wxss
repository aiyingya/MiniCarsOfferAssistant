/**index.wxss**/
.container {
	background-color: #fff;
	overflow: hidden;
}
.hot-carsbrand-wrap {
	width: 100%;
	height: auto;
}
.hot-carsbrand-title {
	width: 93.6%;
	height: 1rpx;
	margin: 70rpx auto 0 auto;
	position: relative;
	background-color: #D9D9D9;
	overflow: visible;
}
.hot-carsbrand-text {
	width: 180rpx;
	height: 30rpx;
	line-height: 30rpx;
	background-color: #fff;
	position: absolute;
	top: 50%;
	left: 50%;
	margin: -15rpx 0 0 -90rpx;
	font-size: 28rpx;
	text-align: center;
}
.hot-carsbrand-stand {
	width: 93.6%;
	margin: 20rpx auto;
	overflow: hidden;
}
.stand-item {
	width: 20%;
	height: 80rpx;
	float: left;
}
.hot-carslogo {
	margin: 0 auto;
	display: block;
	width: 120rpx;
	height: 80rpx;
}

.viewCarsList-wrap,
.viewCarsList-calls {
	width: 100%;
	overflow: hidden;
}
.viewCarsList-index {
	width: 100%;
	height: 40rpx;
	line-height: 40rpx;
	color: #999;
	padding: 0 3.2%;
	background: #EFEFEF;
	font-family: "SFUIDisplay-Regular";
	font-size: 24rpx;
}
.weui-cell__bd {
	font-size: 32rpx;
	font-family: "PingFangSC-Regular";
	color: #333333;
}
.weui-cell:before {
	left: 24rpx;
}
.weui-cells:after {
	border-bottom: none;
}
.viewCarsList_icon-index {
	display: block;
	width: 90rpx;
	height: 60rpx;
}
.alphanet-selector {
  position: absolute;
  top: 50%;
  right: 0;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 10;
  box-sizing: border-box;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
}
.alphanet-selector .selector-one {
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: "SFUIDisplay-Regular";
	font-size: 26rpx;
	color: #007AFF;
  height: 28rpx;
	padding: 2px 3px;
}
.viewCars-describe {
	font-family: "PingFangSC-Light";
	font-size: 26rpx;
	color: #888;
}
.alphanet-toast {
	width: 72rpx;
	height: 72rpx;
	background-color: rgba(0,0,0,.4);
	border-radius: 100%;
	position: absolute;
	top: 50%;
	right: 75rpx;
	margin-top: -38rpx;
	color: #fff;
	text-align: center;
	line-height: 72rpx;
	font-family: "SFUIDisplay-Regular";
	font-size: 40rpx;
	-webkit-transition: all 0.3s ease-in;
	transition: all 0.3s ease-in;
	opacity: 1;
}

/* 车系 */
.carSeries-logo {
	width: 100%;
	height: 160rpx;
	background-color: #fff;
	position: relative;
	justify-content: center;
	align-items: center;
}
.carSeries-logo image {
	width: 120rpx;
	height: 80rpx;
}
.weui-media-box__hd_in-appmsg,
.weui-media-box__thumb {
	width: 150rpx;
	height: 100rpx;
}
.weui-media-box__title {
	font-size: 32rpx;
	color: #333333;
}
.weui-media-box__desc {
	font-size: 26rpx;
	color: #888888;
}
.carSeries-title {
	height: 88rpx;
	line-height: 88rpx;
}
.placeholder {
  height: 80rpx;
  padding: 15px 0;
}




















