<!--index.wxml-->
<scroll-view scroll-y="true" style="height: {{windowHeight}}" scroll-into-view="{{alpha}}">
	<view class="container">
		<!-- 搜索车型.-->
		<!-- cars list.-->
		<view class="viewCarsList-wrap">
			<view 
				wx:for="{{brandGroupList}}" 
				id="{{item.title}}"
				class="viewCarsList-calls"
				>
				<view class="viewCarsList-index">{{item.title}}</view>
				<view class="weui-cells weui-cells_in-small-appmsg">
					<view
						class="weui-cell weui-cell_access" 
						hover="true"
						hover-class="weui-cell_active"
						wx:for="{{item.items}}" 
						wx:for-item="cell"
						wx:for-index="cellIndex" 
						bindtap="handlerSelectCarSeries"
						data-carSeries="{{cell}}"
						>
						<view class="weui-cell__hd">
							<image src="{{cell.logoUrl}}" class="viewCarsList_icon-index" />
						</view>
						<view class="weui-cell__bd weui-cell_primary">
								<view>{{cell.name}}</view>
						</view>
						<!--<view class="viewCars-describe">在售{{cell.onSaleCount}}款</view>-->
					</view>
				</view>
			</view>
		</view>
	</view>
</scroll-view>
<view wx:if="{{alphanetToast === alpha}}" class="alphanet-toast showToast">{{alpha}}</view>
<view data-id="selector" catchtouchstart="handlerAlphaTap" catchtouchmove="handlerMove" class="alphanet-selector">
	<view wx:for="{{brandGroupList}}" data-ap="{{item.title}}" class="selector-one">
		{{item.title}}
	</view>
</view>

<!-- 车系.-->
<view wx:if="{{showCarSeries !== ''}}" class="carSeries-wrap">
	<view 
		class="carSeries-mask {{showMask}}"
		bindtap="removeCarSeriesInner"
		>
	</view>
	<view class="carSeries-inner {{showCarSeriesInner}}">
		<scroll-view scroll-y style="height: {{windowHeight}}">
			<view class="carSeries-logo weui-flex">
				<image class="" src="{{showCarSeriesImageUrl}}"></image>
			</view>
			<block wx:if="{{carManufacturerSeriesList.length > 0}}">
				<view 
					wx:for="{{carManufacturerSeriesList}}" 
					data-id="{{item.id}}"
					class="viewCarsList-calls"
					>
					<view class="viewCarsList-index carSeries-title">{{item.title}}</view>
					<view class="weui-cells weui-cells_in-small-appmsg">
						<view 
							class="weui-media-box weui-media-box_appmsg" 
							hover="true"
							hover-class="weui-cell_active"
							wx:for="{{item.items}}"
							wx:for-item="cell"
							wx:for-index="cellIndex" 
							bindtap="handlerToCarsModels"
							data-carsInfo="{{cell}}"
							url="../carModels/carModels?carsInfo={{cell}}"
							>
								<view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
									<image class="weui-media-box__thumb" src="{{cell.imgUrl}}"></image>
								</view>
								<view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
										<view class="weui-media-box__title">{{cell.name}}</view>
								</view>
						</view>
					</view>
				</view>
			</block>
			<view 
			  wx:if="{{carManufacturerSeriesList.length === 0 && showNodata}}" 
			  class="nodata"
			  >
				暂无数据
			</view>
		</scroll-view>
	</view>
	
</view>





