@import '../../components/carSource/index.wxss';
@import '../../components/carSource/carSourceView.wxss';
@import '../../components/carSource/carSourceSectionView.wxss';
@import '../../components/dialog/carSourceDetail/carSourceDetail.wxss';
@import '../../components/dialog/settingRemarkLabelDialog/settingRemarkLabelDialog.wxss';

/* 供货详情.*/

page {
  height: 100%;
}

.container {
  height: 100%;
  width: 100%;
}

.navbar-quote-popup {
  width: 100%;
}

.navbar-quote-popup .navbar-quote-main {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.navbar-quote-popup .navbar-quote-cell {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  position: relative;
  font-family: "PingFangSC-Regular";
  font-size: 32rpx;
  color: #333333;
  text-align: center;
}

.navbar-quote-popup .navbar-quote-cell:after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
}

.navbar-quote-popup .navbar-quote-cell:last-child:after {
  border: none;
}

.navbar-quote-popup .navbar-quote-active {
  background-color: #f2f2f2;
}

.car-sources-prompt {
  padding: 8rpx;
  font-size: 20rpx;
  color: #999999;
  text-align: center;
}

.carSources-topbar {
  background-color: #fff;
  overflow: hidden;
  padding: 20rpx 30rpx 10rpx 30rpx;
  display: block;
  margin-bottom: 20rpx;
}

.carSources-topbar .weui-media-box {
  padding: 0 24rpx;
}

.carSources-topbar .weui-media-box__hd,
.carSources-topbar .weui-media-box__thumb {
  width: 150rpx;
  height: 100rpx;
}

.carSources-topbar .weui-media-box__title {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-family: "PingFangSC-Medium";
  font-size: 30rpx;
  color: #333333;
  margin-top: 10rpx;
}

.carSources-topbar .weui-media-box__desc {
  font-family: "PingFangSC-Regular";
  font-size: 26rpx;
  color: #999999;
  letter-spacing: 0rpx;
  line-height: 26rpx;
}

.car-source-sections-nodata-image {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
  display: block;
}

.car-source-sections-nodata-text {
  font-size: 28rpx;
  color: #999999;
  letter-spacing: -0.56rpx;
  line-height: 28rpx;
  text-align: center;
}

.car-source-section-row {
  background-color: #fff;
  position: relative;
  border-bottom: 1rpx solid #E4E4E4;
}

.car-source-section-row:firs-child {
  border-top: 1rpx solid #E4E4E4;
}

.car-source-rows {
  padding: 10rpx 0rpx;
  position: relative;
  width: 100%;
  overflow: hidden;
  background: #DCE1E6;
}

.car-source-rows .carSources-nodata {
  position: absolute;
  top: 0;
}

.car-source-rows .load-more {
  height: 42rpx;
  font-family: "PingFangSC-Regular";
  font-size: 24rpx;
  text-align: center;
}

.car-source-row {
  position: relative;
  padding: 0 10rpx 10rpx 10rpx;
}

.car-source-row:last-child {
  padding-bottom: 0rpx;
}

.button {
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  width: 48.5%;
  font-family: "PingFangSC-Regular";
  font-size: 28rpx;
  border-radius: 8rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

.full {
  width: 100%;
}

.confirm {
  background: #ED4149;
  color: #FFFFFF;
}

.normal {
  border: 1rpx solid #ED4149;
  color: #ED4149;
}


/* 点 前缀*/

.icon-point-padding {
  padding-left: 24rpx;
}

.icon-point {
  position: relative;
  padding-left: 24rpx;
}

.icon-point:before {
  position: absolute;
  content: '';
  width: 8rpx;
  height: 8rpx;
  background: #999999;
  -moz-border-radius: 4rpx;
  -webkit-border-radius: 4rpx;
  border-radius: 4rpx;
  left: 0;
  top: 50%;
  margin-top: -4rpx;
}

.icon-small-point {
  position: relative;
  padding-left: 23rpx;
}

.icon-small-point:before {
  position: absolute;
  content: '';
  width: 6rpx;
  height: 6rpx;
  background: #999999;
  -moz-border-radius: 3rpx;
  -webkit-border-radius: 3rpx;
  border-radius: 3rpx;
  left: 9rpx;
  top: 50%;
  margin-top: -3rpx;
}

.black-magic {
  height: 185rpx;
  width: 100%;
}

.detail-look {
  display: inline-block;
  color: #999999;
}

.carSources-label {
  position: relative;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  margin-top: 8rpx;
  padding-right: 26rpx;
  height: 40rpx;
  overflow: hidden;
}

.carSources-label.show {
  height: auto;
}

.carSources-label .label {
  box-sizing: border-box;
  margin-right: 16rpx;
  margin-bottom: 8rpx;
  height: 40rpx;
  padding: 8rpx 9rpx;
  background: rgba(228, 228, 228, 0.3);
  border-radius: 4rpx;
  font-family: "PingFangSC-Regular";
  font-size: 22rpx;
  color: #333333;
  letter-spacing: 0;
  line-height: 22rpx;
}

.carSources-label .label.goodlabel {
  background: rgba(241, 124, 124, 0.3)
}

.carSources-label .icon_arrow {
  position: absolute;
  top: 50%;
  right: 0;
  width: 24rpx;
  height: 24rpx;
  margin-top: -12rpx;
  transform: rotate(90deg);
  -webkit-transform: rotate(90deg);
  z-index: 99;
}

.carSources-label .icon_arrow.show {
  transform: rotate(-90deg);
  -webkit-transform: rotate(-90deg);
}

.filter-bar {
  position: absolute;
  width: 100%;
}

.fixed-filter-bar {
  background: #ffffff;
  position: fixed;
  top: -1rpx;
  width: 100%;
  z-index: 1;
}

