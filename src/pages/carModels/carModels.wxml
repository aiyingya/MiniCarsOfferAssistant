<!-- 车款.-->
<import src="../../components/carModel/carModel.wxml" />
<import src="../../lib/toast/toast.wxml"/>
<template is="toast" data="{{ ...$wux.toast }}"/>
<view class="car-models container">

	<view class="carModels-topbar">
<!--
		<view class="carModels-navbar">
			<view 
				class="navbar-item"
				bindtap="handleCheckCarsModele"
				>
				<view class="navbar-inner">{{CarsModeleText}}
					<image 
						src="../../images/icons/icon_dropdownarrow_down_gray.png"
						class="icon-arrows"></image>
				</view>
			</view>
		</view>
-->
		
		<!-- 标签.-->
		<view class="carModels-label-inner">
      <view class="carModels-label-wells">
        <view class="carModels-label">
          <view 
            class="label {{item.selected}}"
            wx:for="{{filtersData}}"
            wx:key="unique"
            bindtap="handleSelectCarsModele"
            data-select="{{item}}"
            data-id="{{item.name}}"
            >{{item.name}}</view>
        </view>
      </view>
      <view class="carModels-instore">
        <view 
          class="label {{stockSeclect}}"
          bindtap="handleSelectInstore"
          >{{stockText}}</view>
      </view>
		</view>
		
		
		<view wx:if="{{showRmendCarFacade}}" class="carModels-popup-select rmendCarFacade-popup-wrap">
			<view 
				class="rmendCarFacade-popup-mask showMask"
				bindtap="headlerRemoveRmendCarFacade"
				bindtouchstart = "headlerRemoveRmendCarFacade" 
				></view>
			<view class="rmendCarFacade-inner topToBottom">
				<view 
					class="weui-cell weui-cell_access" 
					hover="true"
					hover-class="weui-cell_active"
					wx:for="{{filtersData}}"
					wx:key="unique"
					bindtap="handleSelectCarsModele"
					data-select="{{item}}"
					data-id="{{index}}"
					>
						<view class="weui-cell__bd weui-cell_primary">
								<view>{{item.name}}</view>
						</view>
						<view
							wx:if="{{CarsModeleSelectId == index}}"
							class="weui-cell__ft">
							<image src="../../images/icons/icon_select_red.png"></image>
						</view>
				</view>
			</view>
		</view>
	</view>

	<view 
	  class="carModels-cells"
	  wx:if="{{carModelsList.length > 0}}"
	  >
		<block 
			wx:for="{{carModelsList}}"
			>
			<template is="carModel" data="{{item,showCharts,selectTime,selectColors,selectColorsId}}" /> 
		</block>
	</view>
	
	<view 
   class="nodata" 
   wx:if="{{carModelsList.length === 0 && showNodata}}"
   >
    <icon type="warn" size="60" color="#cccccc"></icon>
    <view class="icon-box__ctn">
      <view class="icon-box__desc">抱歉！没有相关车信息</view>
    </view>	
	</view>
</view>
<template is="popupCharts" data="{{showPopCharts}}" /> 

<view 
 class="popup-select-charts"
 wx:if="{{selectChartsLabel}}"
 >
  <view class="popup-shade" bindtap="handleClosePopup"></view>
  <view class="popupSelect-main">
    <block wx:if="{{changeSelectColors}}">
      <view 
        class="popup-label {{colorAllSelected}}"
        bindtap="handleChangeColorItem"
        data-selectitem="全部"
        >全部</view>
      <view 
        wx:for="{{selectColorData}}"
        wx:key="*this"
        class="popup-label {{item.selected}}"
        bindtap="handleChangeColorItem"
        data-selectitem="{{item}}"
        data-selectcolors="{{selectColors}}"
        >
        <view
          class="carcolor-item"
          style="background:{{item.value}}; {{item.style}}"
          ></view>
        <view class="text">{{item.key}}</view>
      </view>
    </block>
    <block wx:if="{{changeSelectTimes}}">
     <view 
      class="popup-label {{timesAllSelected}}"
      bindtap="handleChangeTimesItem"
      data-selectitem="全部"
      >全部</view>
      <view 
        wx:for="{{selectColorTime}}"
        wx:key="*this"
        class="popup-label {{item.selected}}"
        bindtap="handleChangeTimesItem"
        data-selectitem="{{item}}"
        >
        <view class="text">{{item.value}}小时</view>
      </view>
    </block>
  </view>
</view>