@import '../../components/carModel/carModel.wxss';

page {
	min-height: 100%;
	background-color: #EFEFEF;
}
.container {
	width: 100%;
	height: 100%;
}
.carModels-topbar {
	width: 100%;
	position: relative;
  margin-bottom: 10rpx;
}
.carModels-navbar {
	position: relative;
	width: 100%;
	height: 88rpx;
	display: flex;
	-webkit-justify-content: space-around;
	justify-content: space-around;
	-webkit-align-items: center;
	align-items: center;
	background-color: #fff;
	z-index: 99;
}
.carModels-navbar:after {
	content: '';
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	border-bottom: 1rpx solid #ccc;
}
.navbar-item {
	position: relative;
	width: 50%;
	text-align: center;
}
.navbar-item:after {
	content: '';
	position: absolute;
	top: 24rpx;
	bottom: 24rpx;
	right: 0;
	border-right: 1rpx solid #ccc;
}
.navbar-item:last-child:after {
	display: none;
}
.navbar-item .navbar-inner {
	position: relative;
	display: inline-block;
	height: 88rpx;
	line-height: 88rpx;
	width: auto;
	padding-right: 50rpx;
	font-family: "PingFangSC-Regular";
	font-size: 28rpx;
	color: #666666;
}
.navbar-item .icon-arrows {
	position: absolute;
	width: 16rpx;
	height: 16rpx;
	right: 22rpx;
	top: 50%;
	margin-top: -8rpx;
}
.navbar-item .icon-filter {
	width: 40rpx;
	height: 40rpx;
	right: 0;
	margin-top: -20rpx;
}
.carModels-label-inner {
  width: 100%;
  margin: 0 auto;
  display: flex;
	-webkit-justify-content: space-between;
	justify-content: space-between;
	-webkit-align-items: center;
	align-items: center;
  background-color: #fff;
}
.carModels-label-wells {
  width: 80%;
  overflow-x: auto;
  overflow-y: hidden;
  position: relative;
}
.carModels-label-wells::-webkit-scrollbar {
    display: none;
}
.carModels-label {
	padding: 20rpx;
	-webkit-box-sizing: border-box;
  box-sizing: border-box;
	background-color: #fff;
	display: flex;
	justify-content: flex-start;
	-webkit-align-items: center;
	align-items: center;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-flex-wrap: nowrap;
  flex-wrap: nowrap;
  width: 1000rpx;
}
.carModels-label .label,
.carModels-instore .label {
	height: 48rpx;
	line-height: 48rpx;
	padding: 0 27rpx;
	border: 1rpx solid #333333;
	border-radius: 65rpx;
	font-size: 24rpx;
	color: #333;
	margin-right: 10rpx;
}
.carModels-label .label.selected,
.carModels-instore .label.selected{
  border: 1rpx solid #ED4149;
  color: #ED4149;
}
.carModels-instore {
  padding: 20rpx 0 20rpx 20rpx;
  display: flex;
	-webkit-justify-content: center;
	justify-content: center;
	-webkit-align-items: center;
	align-items: center;
  position: relative;
}
.carModels-instore:after {
  content: '';
  position: absolute;
  top: 25rpx;
  bottom: 25rpx;
  left: 0;
  border-right: 1px solid #CCCCCC;
}
.carModels-cells {
	width: 100%;
}

.carModels-popup-select {
	position: fixed;
	top: 88rpx;
	left: 0;
	bottom: 0;
	width: 100%;
	z-index: 99;
}

.rmendCarFacade-popup-mask {
	position: absolute;
	width: 100%;
	top: 0;
	bottom: 0;
	width: 100%;
	background-color: rgba(0,0,0,.4);
	z-index: 1;
}
.rmendCarFacade-inner {
	width: 100%;
	height: auto;
	background-color: #fff;
	position: relative;
	z-index: 10;
	-webkit-transform: translate3d(0, 100rpx, 0);
  transform: translate3d(0, 100rpx, 0) ;
}
.rmendCarFacade-inner .weui-cell {
	height: 104rpx;
	line-height: 104rpx;
	padding: 0 30rpx;
}
.rmendCarFacade-inner .weui-cell:before {
	left: 30rpx;
}
.rmendCarFacade-inner .weui-cell__bd {
	font-family: "PingFangSC-Regular";
	font-size: 30rpx;
	color: #333333;
}
.rmendCarFacade-inner .weui-cell__ft,
.rmendCarFacade-inner .weui-cell__ft image {
	display: block;
	width: 36rpx;
	height: 36rpx;
}
.weui-toast {
	display: inline-block;
	width: auto;
	min-height: auto;
	padding: 30rpx 50rpx;
}
.weui-toast__content {
	margin: 0;
}
