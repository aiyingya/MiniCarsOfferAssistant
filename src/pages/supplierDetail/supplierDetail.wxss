@import '../../components/dialog/carSourceDetail/carSourceDetail.wxss';
.supplier-detail {}

.supplier-detail .header {
  box-sizing: border-box;
  height: 100rpx;
  width: 100%;
  padding: 0rpx 30rpx;
  background: #ffffff;
}

.supplier-detail .body {
  margin-top: 20rpx;
}

.supplier-detail .filter-section {
  height: 96rpx;
  width: 100%;
  background: #ffffff;
  border-bottom: 1px solid #E4E4E4;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
}

.supplier-detail .rows {}

.supplier-detail .row {
  position: relative;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  height: auto;
  background: #ffffff;
  width: 100%;
}

.supplier-detail .row::after {
  content: '';
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 0;
  border-bottom:1rpx solid #E5E5E5;
}

.supplier-detail .footer {
  position: fixed;
  bottom: 0rpx;
  height: 210rpx;
  width: 100%;
  background: #ffffff;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
}

/* 筛选视图 */

.filter-view {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  background-color: #ffffff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  white-space: nowrap;
}

.filter-view .filter {
  float: left;
  white-space: nowrap;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}

.filter-view .filter :last-child :after {
  border-right: 1rpx solid #FFFFFF;
}

.filter-view .filter .item {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #333333;
  color: #333333;
  border-radius: 65rpx;
  font-size: 24rpx;
  height: 48rpx;
  margin-right: 10rpx;
  font-family: "PingFangSC-Regular";
  letter-spacing: 0;
  line-height: 48rpx;
  min-width: 125rpx;

  background-color: #ffffff;
  padding-left: 0rpx;
  padding-right: 0rpx;
}

.filter-view .filter .item :last-child {
  margin-right: 0rpx;
}

.filter-view .filter .selected {
  border: 1rpx solid #ED4149;
  color: #ED4149;
}


/* 评论板 */

.comment-board {
  width: 100%;
  height: 100%;
}
.comment-board .tag-board {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  width: 100%;
  font-family: 'PingFangSC-Regular';
  font-size: 28rpx;
  color: #666666;
  letter-spacing: 0;
  line-height: 28rpx;
}
.comment-board .tag-board .tag-selection {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.comment-board .tag-board .tag-selection .tag {
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #999999;
  border: 1rpx solid #999999;
  border-radius: 65rpx;
  letter-spacing: 0;
  margin-left: 20rpx;
  padding: 0 0;
  height: 48rpx;
  width: 140rpx;
}
.comment-board .tag-board .tag-selection .tag image{
  height: 24rpx;
  width: 24rpx;
  padding-right: 10rpx;
}
.comment-board .tag-board .tag-selection .selected {
  border: 1rpx solid #3377EE;
  color: #3377EE;
}
.comment-board .comment-textarea {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  width: 100%;
  margin-bottom: 20rpx;
}
.comment-board .comment-textarea .textarea {
  background: #FAFAFA;
  border: 1px solid #CCCCCC;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
  border-radius: 8rpx;
  width: 100%;
  height: 100rpx;
  margin-right: 10rpx;
}
.comment-board .comment-textarea .textarea-placeholder {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0;
  line-height: 28rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.comment-board .comment-textarea .submit-input {
  background: #CCCCCC;
  border-radius: 8rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  line-height: 100rpx;
  height: 100rpx;
  width: 100rpx;
  margin: 0 0;
  padding: 0 0;
  vertical-align: middle;
}
.comment-board .comment-textarea .valid {
  background: #ED4149;
}

/* 评论视图 */

.comment {}

.comment .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
}

.comment .title .profile {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  letter-spacing: 0;
}

.comment .title .profile .phone {
  margin-right: 30rpx;
  color: #666666;
}

.comment .title .profile .create-date {
  color: #999999;
}

.comment .content {
  padding-bottom: 30rpx;
  box-sizing: border-box;
}

.comment .title .tag {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.comment .title .tag image {
  height: 24rpx;
  width: 24rpx;
}

.comment .title .tag .tag-label {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666666;
  letter-spacing: 0;
  margin-left: 6rpx;
  box-sizing: border-box;
}

.comment .title .tag .highlight {
  color: #3377EE;
}

.comment .content {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
}


/* 精准供应商行 */

.supplier-search-result {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100%;
  background: #ffffff;
}
.supplier-search-result .profile {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  max-width: calc(100% - 100rpx);
}
.supplier-search-result .profile .name {
  font-family: "PingFangSC-Medium";
  font-size: 30rpx;
  color: #333333;
  letter-spacing: 0rpx;
  overflow: hidden;
}
.supplier-search-result .profile .tag-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family: "PingFangSC-Regular";
  font-size: 24rpx;
  color: #3377EE;
  letter-spacing: 0;
  width: 120rpx;
}
.supplier-search-result .profile .tag-label image {
  margin-left: 20rpx;
  margin-right: 6rpx;
  width: 24rpx;
  height: 24rpx;
}

.supplier-search-result .call-line {
  padding: 30rpx 20rpx;
  width: 40rpx;
  height: 40rpx
}

