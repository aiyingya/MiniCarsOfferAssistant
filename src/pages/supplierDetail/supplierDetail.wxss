@import '../../components/supplier/index.wxss';
@import '../../components/supplierDetail/index.wxss';
@import '../../components/dialog/carSourceDetail/carSourceDetail.wxss';
.supplier-detail {}

.supplier-detail .header {
  box-sizing: border-box;
  height: 188rpx;
  width: 100%;
  background: #ffffff;
}

.supplier-detail .filter-section {
  height: 96rpx;
  width: 100%;
  background: #ffffff;
  border-bottom: 1px solid #E4E4E4;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
}

.supplier-detail .branch-section {
  width:100%;
  box-sizing:border-box;
}


.supplier-detail .rows {
  width: 100%;
}

.supplier-detail .row {
  position: relative;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  height: auto;
  background: #ffffff;
  width: 100%;
}

.supplier-detail .no-row {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: -0.56rpx;
  line-height: 28rpx;
  text-align: center;
}

.supplier-detail .row::after {
  content: '';
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 0;
  border-bottom: 1rpx solid #E5E5E5;
}

.supplier-detail .footer {
  bottom: 0rpx;
  height: 210rpx;
  width: 100%;
  background: #ffffff;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
}

.supplier-detail .header-title{
  height: 100rpx;
  padding: 0rpx 30rpx;
}
.supplier-detail .header-tab{
  height: 88rpx;
  display:-webkit-box;
  background:#FAFAFA;
}

.supplier-detail .header-tab .header-tab__item{
  position:relative;
  display:block;
  -webkit-box-flex:1;
  -webkit-flex:1;
  flex:1;
  text-align:center;
  font-size:0;

  opacity: 0.9;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #888888;
  letter-spacing: 0;
  line-height: 88rpx;
}

.supplier-detail .header-tab .header-tab__item.header-tab__item_on {
  color: #ED4149;
  border-bottom: 6rpx solid #ED4149;
}

.supplier-detail .linkman {
  background: #ffffff;
}
.supplier-detail .linkman .linkman__title {
  border-bottom:1rpx solid #E4E4E4;
  font-family:PingFangSC-Regular;
  font-size:26rpx;
  color:#666666;
  letter-spacing:0;
  line-height:80rpx;
  height:80rpx;
  text-align:center;
}
