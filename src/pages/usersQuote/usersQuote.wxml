<view class="container users-quote">

	<view class="users-topbar">
		<view class="users-head">
			<image src="{{userPortrait}}"></image>
		</view>

		<block
			wx:if="{{isLogin}}"
			>
			<!-- name.-->
			<view class="users-name">
				{{userName}}
			</view>
			<!-- phone-->
			<view class="users-phone">
				{{userMobile}}
			</view>

			<!-- 标签.-->
			<view class="users-label">
				<view
					class="label"
					wx:for="{{userTenants}}"
					wx:key="tenantId"
					>{{item.tenantName}}</view>
			</view>
		</block>
		<view
			wx:else
			class="users-login"
			bindtap="handleToLogin"
			>登录/注册</view>
	</view>

	<view class="users-cells weui-cells weui-cells_in-small-appmsg">
			<view
				class="weui-cell weui-cell_access"
				hover="true"
				hover-class="active"
        bindtap="handleToQuoteRecord"
				>
				<view class="weui-cell__hd">
					<image src="../../images/icons/tab_icon_price_off.png" />
				</view>
				<view
					class="weui-cell__bd weui-cell_primary"
					>
						<view>报价记录</view>
				</view>
			</view>
			<view
				class="weui-cell weui-cell_access"
				hover="true"
				hover-class="active"
				>
				<view class="weui-cell__hd">
					<image src="../../images/icons/icon_collection.png" />
				</view>
				<view
					class="weui-cell__bd weui-cell_primary"
					bindtap="handleToNewPages"
					data-page="setCost"
					>
						<view>报价偏好设置</view>
				</view>
			</view>
      <view
				class="weui-cell weui-cell_access"
				hover="true"
				hover-class="active"
				>
				<view class="weui-cell__hd">
					<image src="../../images/icons/icon_activity_management.png" />
				</view>
				<view
					class="weui-cell__bd weui-cell_primary"
					bindtap="handleToNewPages"
					data-page="bargain"
					>
						<view>砍价活动管理</view>
				</view>
			</view>
			<view
				class="weui-cell weui-cell_access"
				hover="true"
				hover-class="active"
				wx:if="{{manager}}"
				>
				<view class="weui-cell__hd">
					<image src="../../images/icons/icon_potential_people.png" />
				</view>
				<view
					class="weui-cell__bd weui-cell_primary"
					bindtap="handleToNewPages"
					data-page="potential"
					>
						<view>潜客</view>
				</view>
			</view>
