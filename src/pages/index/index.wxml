<!--index.wxml-->
<scroll-view scroll-y="true" style="height: {{windowHeight}}px" class="container">
  <!-- 试用时间.-->
  <view class="trial-times-wrap" wx:if="{{visitorInfo.status === 'normal'}}">
    <view class="trial-times">
      <image src="../../images/icons/icon_prompt.png"></image>
      你还可以试用
      <block wx:if="{{visitorInfo.times.days > 0}}">{{visitorInfo.times.days}}天</block>
      <block wx:elif="{{visitorInfo.times.hours > 0}}">{{visitorInfo.times.days}}小时</block>
      <block wx:else>1小时</block>
      ，若想继续试用，请联系何先生可拨打电话
      <view 
        class="call-phone"
        data-phone="15821849025"
        bindtap="handlerMakePhoneCall"
        >15821849025</view>
    </view>
  </view>
  
  <!-- 搜索车型.-->
  <view class="topbar">
    <view class="topbar-search">
      <view class="topbar-ad">
        <image src="../../images/pages/home/home_slogan_pic.png"></image>
      </view>
      <view class="search-wrap">
        <view class="search-inner">
          <view class="search-icon">
            <image class="search-img" src="../../images/icons/icon_find.png"></image>
          </view>
          <input class="search-input" placeholder-class="search-placeholder" disabled placeholder="输入指导价/车款名 如朗逸1099" />
          <view class="bindtap" bindtap="searchCarType"></view>
        </view>
      </view>
    </view>
    <image class="topbar-bg" src="../../images/pages/home/home_bg_pic.png"></image>
  </view>


  <!-- 热门品牌.-->
  <view class="hot-carsbrand-wrap">
    <view class="title hot-carsbrand-title">
      <view class="text hot-carsbrand-text">热门品牌</view>
      <view bindtap="handleCheckMore" class="more">查看更多
        <image src="../../images/icons/icon_arrow_more.png" class="icon-more"></image>
      </view>
    </view>

    <view class="hot-carsbrand-stand">
      <view class="stand-item" wx:for="{{hotCarLists}}" wx:key="id">
        <image mode="aspectFit" class="hot-carslogo" src="{{item.logoUrl}}" bindtap="handlerSelectCarSeries" data-carSeries="{{item}}"></image>
      </view>
    </view>
  </view>

  <!-- 热推车型.-->
  <view class="hot-carstype-wrap">
    <view class="title hot-carsbrand-title">
      <view class="text hot-carsbrand-text">热推车型</view>
      <!--
                  <view class="more">查看更多
                      <view class="icon-more"></view>
                  </view>
      -->
    </view>

    <view class="hotCarsType-cells">
      <view class="hotCarsType-cell" wx:for="{{hotCarsTypes}}" wx:key="id">
        <view class="hotCarsType-title">
          <view class="hotCarsType-title-inner">【{{item.guidePriceSTR}}】{{item.name}}</view>
          <view class="hotCarsType-title-price" wx:if="{{item.depreciate != 0}}">
            <block wx:if="{{item.depreciate > 0}}">下</block>
            <block wx:else>上</block>
            {{item.depreciateSTR}}万
          </view>
        </view>
        <view class="hotCarsType-remark">
          <view class="hotCarsType-remark-inner">{{item.description}}</view>
          <view class="hotCarsType-title-relation" bindtap="handlerMakePhoneCall" data-phone="{{item.phoneNumber}}">联系</view>
        </view>
      </view>
    </view>
  </view>
</scroll-view>

<!-- 车系.-->
<view class="drawer-mask" wx:if="{{showCarSeries != ''}}" bindtap="removeCarSeriesInner" catchtouchmove> </view>
<scroll-view scroll-y="true" animation="{{animationData}}" class="drawer-box">
  <scroll-view scroll-y="true " class="drawer-content ">
    <view class="carSeries-logo weui-flex">
      <image class="" src="{{showCarSeriesImageUrl}}"></image>
    </view>
    <view wx:if="{{carManufacturerSeriesList.length > 0}}">
      <view wx:for="{{carManufacturerSeriesList}}" wx:key="title" data-id="{{item.id}}" class="viewCarsList-calls">
        <view class="viewCarsList-index carSeries-title">{{item.title}}</view>
        <view class="weui-cells weui-cells_in-small-appmsg">
          <view class="weui-media-box weui-media-box_appmsg" hover="true" hover-class="weui-cell_active" wx:for="{{item.items}}" wx:key="id"
            wx:for-item="cell" wx:for-index="cellIndex" bindtap="handlerToCarsModels" data-carsInfo="{{cell}}" url="../carModels/carModels?carsInfo={{cell}}">
            <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
              <image class="weui-media-box__thumb" src="{{cell.imgUrl}}"></image>
            </view>
            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
              <view class="weui-media-box__title">{{cell.name}}</view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view wx:if="{{carManufacturerSeriesList.length === 0 && showNodata}}" class="nodata">
      暂无数据
    </view>
    <view class="placeholder"></view>
  </scroll-view>
</scroll-view>
