.settingprice {
  position: relative;
  color: #000000;
  width: calc(100% - 80rpx);
  background:#EFEFEF;
  border: 1px solid #CCCCCC;
  border-radius: 8rpx;
  margin-right:30rpx;
  height: 60rpx;
}
.settingprice input{
  font-size: 26rpx;
  color: #333;
  line-height: 40rpx;
  margin:10rpx 60rpx 10rpx 180rpx;
  text-align: center;
}
.settingprice-direction{
  position:absolute;
  left:18rpx;
  top:10rpx;
  width:76rpx;
  height:36rpx;
  line-height:36rpx;
  background:#FFFFFF;
  border:1px solid #AEA5A6;
  border-radius:8rpx;
  font-family:PingFangSC-Regular;
  font-size:30rpx;
  color:#333333;
}

.settingprice-direction__icon_minus{
  position:absolute;
  left:116rpx;
  top:10rpx;
  width:40rpx;
  height:40rpx;
  color:#666666;
  font-size:36rpx;
}
.settingprice-direction__icon_plus{
  position:absolute;
  right:10rpx;
  top:10rpx;
  width:40rpx;
  height:40rpx;
  color:#666666;
  font-size:36rpx;
}
.settingprice-direction__icon_change{
  position:absolute;
  height:30rpx;
  width:30rpx;
  top:50%;
  margin-top:-15rpx;
  margin-left:4rpx;
}
.settingprice-direction_text{
  position:absolute;
  left:14rpx;
}

.settingprice-type__text{
  position:absolute;
  right:-30rpx;
  top:10rpx;
  width:23rpx;
  line-height:40rpx;
}
