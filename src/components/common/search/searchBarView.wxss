.search-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0rpx 50rpx;
}

.search-bar .search-input {
  position: relative;
  height: 90rpx;
  width: 100%;
}

.search-bar .search-input input {
  background: #FFFFFF;
  box-shadow: 0 3rpx 10rpx 0 rgba(50,57,68,0.30);
  border-radius: 6rpx;
  height: 100%;
  width: 100%;
}

.search-bar .search-input .search-placeholder {
  font-family: "PingFangSC-Regular";
  font-size: 30rpx;
  color: #AAAAAA;
  letter-spacing: 0;
  line-height: 28rpx;
  text-align: center;
}
