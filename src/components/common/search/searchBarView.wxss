.search-bar {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.search-bar .search-input {
  box-sizing: border-box;
  padding: 0 20rpx;
  height: 80rpx;
  width: 100%;
  box-shadow: 0 3px 10px 0 rgba(50,57,68,0.30);
  border-radius: 100px;
  margin:0rpx 25px;
  background: #FFFFFF;
}

.search-bar .search-input input {
  height: 100%;
  width: 100%;
}

.search-bar .search-input .search-placeholder {
  font-family: "PingFangSC-Regular";
  font-size: 30rpx;
  color: #AAAAAA;
  letter-spacing: 0;
  line-height: 28rpx;
  text-align: center;
}
