/* 下拉选择 */
.carSources-navbar {
	width: 100%;
	height: 88rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	background-color: #ffffff;
	z-index: 10;
}
.carSources-navbar:after  {
	content: '';
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	border-bottom: 1rpx solid #E4E4E4;
}
.carSources-navbar .navbar {
	width: 20%;
	position: relative;
	overflow: visible;
	font-family: "PingFangSC-Regular";
	font-size: 28rpx;
	color: #666666;
	text-align: center;
}
.carSources-navbar .cars-facade {
	width: 100%;
}
.carSources-navbar .cars-facade:after {
	content: '';
	position: absolute;
	top: -6rpx;
	bottom: -6rpx;
	right: 0;
	border-right: 1rpx solid #E4E4E4;
}
.carSources-navbar .cars-facade:last-child:after {
	border-right: 1rpx solid #FFFFFF;
}
.carSources-navbar .navbar-text {
	position: relative;
	display: inline-block;
	padding-right: 30rpx;
	font-family: "PingFangSC-Regular";
	font-size: 28rpx;
	color: #666666;
	letter-spacing: 0rpx;
	line-height: 28rpx;
}
.carSources-navbar .icon-dropdownarrow {
	width: 16rpx;
	height: 16rpx;
	position: absolute;
	top: 50%;
	right: 0;
	margin-top: -8rpx;
}
.carSources-navbar .navbar .navbar-btn {
	display: block;
	width: 100rpx;
	height: 48rpx;
	line-height: 48rpx;
	background-color: #fff;
	border: 1rpx solid #CCCCCC;
	border-radius: 64rpx;
	font-family: "PingFangSC-Regular";
	font-size: 26rpx;
	color: #666666;
	text-align: center;
	margin: 0 auto;
}
.carSources-navbar .navbar .navbar-btn.in_stock {
	border: 1px solid #ED4149;
	color: #ED4149;
}

