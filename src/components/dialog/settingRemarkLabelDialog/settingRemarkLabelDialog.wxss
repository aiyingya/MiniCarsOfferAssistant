.setting-content{
  padding: 0 3%;
}

.setting-content .line-content{
  margin: 20rpx 0;
}

.setting-content .line-content .left{
  float: left;
  width: 20%;
  line-height: 48rpx;
}

.setting-content .line-content .right {
  float: left;
  width: 80%;
}

.setting-content .line-content .right label checkbox{
  display: none;
}
.setting-content .line-content .right label {
  display: inline-block;
  float:left;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666666;
  letter-spacing: 0;
  border: 1px solid #CCCCCC;
  padding: 0 17rpx;
  margin-bottom: 10rpx;
  margin-right: 10rpx;
  height: 48rpx;
  line-height: 48rpx;
}
.setting-content .line-content .right label.selected {
  border: 1px solid #ED4149;
  color: #ED4149;
}

.setting-content .line-content .right .textarea{
  width: 88%;
  height: 150rpx;
  padding: 10rpx 14rpx;
  margin-bottom: 10rpx;
  text-align: left;
  background: #FAFAFA;
  border: 1px solid #E4E4E4;
  border-radius: 4rpx;
  font-size: 26rpx;
  line-height: 20rpx;
}

