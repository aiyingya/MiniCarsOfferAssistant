.setting-content{
  padding: 0 3%;
}

.setting-content .line-content{
  margin: 20rpx 0;
}

.setting-content .line-content .left{
  float: left;
  width: 20%;
  line-height: 48rpx;
}

.setting-content .line-content .right {
  float: left;
  width: 80%;
}

.setting-content .line-content .right.price{
  margin-bottom:10rpx;
  text-align: center;
  display:flex;
  justify-content:center;
  line-height: 48rpx;
  font-size:32rpx;
}

.setting-content .line-content .right.price .box input,
.setting-content .line-content .right.price .down,
.setting-content .line-content .right.price .up,
.setting-content .line-content .right.price .box .yen
{
  width: 49rpx;
  border: 1px solid #CCCCCC;
  border-radius: 100rpx;
}


.setting-content .line-content .right.price .box{
  position:relative;
  width:50%;
  align-items:center;
  border:1px solid #CCCCCC;
  border-radius: 100rpx;
}

.setting-content .line-content .right.price .box input{
  padding-left: 48rpx;
  width: 80%;
  border:0;
}

.setting-content .line-content .right.price .box .yen{
  position:absolute;
  line-height:48rpx;
  left:0;
  top:4rpx;
  border:0;
  font-family:PingFangSC-Regular;
  color:#666666;
  letter-spacing:0;
}
.setting-content .line-content .right.price .down{
  margin-right:13rpx;
  color:#ED4149;
  font-weight: 900;
  font-size: 50rpx;
}
.setting-content .line-content .right.price .up{
  margin-left: 13rpx;
  color: #ED4149;
  font-weight: 900;
  font-size: 50rpx;
}


.setting-content .line-content .right label checkbox{
  display: none;
}
.setting-content .line-content .right label {
  display: inline-block;
  float:left;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666666;
  letter-spacing: 0;
  border: 1px solid #CCCCCC;
  padding: 0 17rpx;
  margin-bottom: 10rpx;
  margin-right: 10rpx;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 100rpx;
}
.setting-content .line-content .right label.selected {
  border: 1px solid #ED4149;
  color: #ED4149;
}

.setting-content .line-content .right .textarea{
  width: 88%;
  height: 150rpx;
  padding: 10rpx 14rpx;
  margin-bottom: 10rpx;
  text-align: left;
  background: #FAFAFA;
  border: 1px solid #E4E4E4;
  border-radius: 4rpx;
  font-size: 26rpx;
  line-height: 20rpx;
}

