/**index.wxss**/
.search-wrap {
	width: 93.6%;
	height: 80rpx;
	margin: 50rpx auto;
	background-color: #F0F0F0;
	border-radius: 8rpx;
	position: relative;
}
.search-icon {
	position: absolute;
	width: 24rpx;
	height: 24rpx;
	top: 50%;
	margin-top: -12rpx;
	left: 31%;
}
.search-img {
	display: block;
	width: 100%;
	height: 24rpx;
}
.search-input {
	width: 100%;
	height: 80rpx;
	font-size: 28rpx;
}
.search-placeholder {
	color: #aaa;
	text-align: center;
	font-size: 24rpx;
	font-weight: 100;
}
.hot-carsbrand-wrap {
	width: 100%;
	height: auto;
}
.hot-carsbrand-title {
	width: 93.6%;
	height: 1rpx;
	margin: 0 auto;
	position: relative;
	background-color: #D9D9D9;
	overflow: visible;
}
.hot-carsbrand-text {
	width: 180rpx;
	height: 30rpx;
	line-height: 30rpx;
	background-color: #fff;
	position: absolute;
	top: 50%;
	left: 50%;
	margin: -15rpx 0 0 -90rpx;
	font-size: 28rpx;
	text-align: center;
}
.hot-carsbrand-stand {
	width: 93.6%;
	margin: 20rpx auto 0 20rpx;
	overflow: hidden;
}
.stand-item {
	width: 20%;
	height: 80rpx;
	float: left;
}
.hot-carslogo {
	margin: 0 auto;
	display: block;
	width: 120rpx;
	height: 80rpx;
}

.viewCarsList-wrap,
.viewCarsList-calls {
	width: 100%;
	overflow: hidden;
}
.viewCarsList-index {
	width: 100%;
	height: 40rpx;
	line-height: 40rpx;
	color: #999;
	padding: 0 3.2%;
	background: #EFEFEF;
}
.weui-cell__bd {
	font-size: 32rpx;
}
.weui-cell:before {
	left: 24rpx;
}
.viewCarsList_icon-index {
	display: block;
	width: 90rpx;
	height: 60rpx;
	
}