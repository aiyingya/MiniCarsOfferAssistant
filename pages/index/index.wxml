<!--index.wxml-->
<scroll-view scroll-y style="height: {{windowHeight}}" scroll-into-view="{{alpha}}">
	<view class="container">
		<!-- 搜索车型.-->
		<view class="search-wrap">
			<view class="search-inner">
				<view class="search-icon">
					<image class="search-img" src="../../images/icons/icon_find.png"></image>
				</view>
				<input 
					bindtap="searchCarType" 
					class="search-input" 
					placeholder-class="search-placeholder"
					disabled 
					placeholder="输入指导价/车款名" 
					/>
			</view>
		</view>

		<!-- 热门品牌.-->
		<view class="hot-carsbrand-wrap">
			<view class="hot-carsbrand-title">
				<view class="hot-carsbrand-text">热门品牌</view>
			</view>

			<view class="hot-carsbrand-stand">
				<view 
					class="stand-item"
					wx:for="{{hotCarLists}}"
					wx:key="unique" 
					>
					<image 
						mode="aspectFit" 
						class="hot-carslogo" 
						src="{{imageDomain}}{{item.carBrandLogoUrl}}"
						bindtap="selectCarSeries"
						data-carSeries="{{item}}"
						></image>
				</view>
			</view>	
		</view>

		<!-- cars list.-->
		<view class="viewCarsList-wrap">
			<view 
				wx:for="{{brandGroupList}}" 
				wx:key="unique" 
				id="{{item.firstLetter}}" 
				class="viewCarsList-calls"
				>
				<view class="viewCarsList-index">{{item.firstLetter}}</view>
				<view class="weui-cells weui-cells_in-small-appmsg">
					<view
						class="weui-cell weui-cell_access" 
						hover="true"
						hover-class="weui-cell_active"
						wx:for="{{item.carBrandList}}" 
						wx:key="unique" 
						wx:for-item="cell" 
						wx:for-index="cellIndex" 
						bindtap="selectCarSeries"
						data-carSeries="{{cell}}"
						>
						<view class="weui-cell__hd">
							<image src="{{imageDomain}}{{cell.logoUrl}}" class="viewCarsList_icon-index" />
						</view>
						<view class="weui-cell__bd weui-cell_primary">
								<view>{{cell.brandName}}</view>
						</view>
						<view class="viewCars-describe">在售{{cell.onSaleCount}}款</view>
					</view>
				</view>
			</view>
		</view>
	</view>
</scroll-view>
<view wx:if="{{alphanetToast === alpha}}" class="alphanet-toast showToast">{{alpha}}</view>
<view data-id="selector" catchtouchstart="handlerAlphaTap" catchtouchmove="handlerMove" class="alphanet-selector">
	<view wx:for="{{brandGroupList}}" wx:key="unique" data-ap="{{item.firstLetter}}" class="selector-one">
		{{item.firstLetter}}
	</view>
</view>

<!-- 车系.-->
<view wx:if="{{showCarSeries !== ''}}" class="carSeries-wrap">
	<view 
		class="carSeries-mask {{showMask}}"
		bindtap="removeCarSeriesInner"
		>
	</view>
	<view class="carSeries-inner {{showCarSeriesInner}}">
		<scroll-view scroll-y style="height: {{windowHeight}}">
			<view class="carSeries-logo weui-flex">
				<image class="" src="{{imageDomain}}{{showCarSeriesImageUrl}}"></image>
			</view>
			<view 
				wx:for="{{carManufacturerSeriesList}}" 
				wx:key="unique" 
				id="{{item.id}}" 
				class="viewCarsList-calls"
				>
				<view class="viewCarsList-index carSeries-title">{{item.carManufacturerName}}</view>
				<view class="weui-cells weui-cells_in-small-appmsg">
					<navigator 
						url="../search/carModels/carModels"
						class="weui-media-box weui-media-box_appmsg" 
						hover-class="weui-cell_active"
						wx:for="{{item.carSeriesList}}" 
						wx:key="unique" 
						wx:for-item="cell" 
						wx:for-index="cellIndex" 
						>
							<view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
								<image class="weui-media-box__thumb" src="{{imageDomain}}{{cell.picUrl}}"></image>
							</view>
							<view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
									<view class="weui-media-box__title">{{cell.seriesName}}</view>
									<view class="weui-media-box__desc">在售{{cell.onSaleCount}}款 {{cell.colorCount}}</view>
							</view>
					</navigator>
				</view>
			</view>
		</scroll-view>
	</view>
</view>




