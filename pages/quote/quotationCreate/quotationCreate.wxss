.tab-navbar {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 88rpx;
	overflow: hidden;
	background: #FAFAFA;
}
.tab-item {
	line-height: 88rpx;
	height: 88rpx;
	font-family: "PingFangSC-Regular";
	font-size: 32rpx;
	color: #888888;
	padding: 0 !important;
}
.tab-content {
	position: absolute;
	padding: 0;
	top: 88rpx;
	height: auto;
	background-color: #fff;
	width: 100%;
}
.quote-btn {
	width: 84%;
	height: 98rpx;
	font-family: "PingFangSC-Regular";
	background: #ED4149;
	border-radius: 8px;
	font-size: 32rpx;
	color: #FFFFFF;
	line-height: 98rpx;
	text-align: center;
	margin: 80rpx auto;
	border-radius: 8rpx;
}
.weui-cell_picker {
	position: relative;
	width: 100%;
	display: block;
}
.weui-cell_picker:before {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	border-top: 1rpx solid #D9D9D9;
	left: 15px;
}
.weui-cell_picker:first-child::before {
	display: none;
}
.weui-tab__content .weui-cells:after,
.weui-tab__content .weui-cells:before {
	display: none;
}