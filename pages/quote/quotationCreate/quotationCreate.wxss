     display: flex;
}
.btn{
    border: 1px solid #eee;
}

.btn::after{
    border: none;
}

.btn-group .btn{
    border-radius: 0;
    border-bottom: none;
    background: #fff;
    font-size: 32rpx;
    padding: 33rpx 0;
    line-height: 32rpx;
    display: inline-block;
}

.btn-group .btn:first-child{
    border: none;
    border-top:1px solid #eee;
}

.btn-group .btn:last-child{
    border: none;
    background: #ED4149;
    color: #fff;
}
