<template name="dialog">
    <view class="weui-mask {{ animateCss }}" hidden="{{ !visible }}"></view>
    <view class="weui-dialog {{ animateCss }}" hidden="{{ !visible }}">
        <view class="weui-dialog__hd" wx:if="{{ title }}">
            <view class="weui-dialog__title">{{ title }}</view>
        </view>
        <view class="weui-dialog__bd" wx:if="{{ content }}"><view class="weui-dialog__bd__centent">{{ content }}</view></view>
        <form bindsubmit="{{ dialogConfirm }}">
            <view class="weui-dialog__input" >
                <input
                        type="number"
                        name="mobile"
                        placeholder="{{ phoneNumberPlaceholder }}"
                        placeholder-class=""
                        focus="{{ visible }}"
                        value="{{ phoneNumber }}"
                        bindinput="{{ phoneNumberInput }}"
                        bindconfirm="{{ phoneNumberConfirm }}"
                        bindfocus="{{ phoneNumberFocus }}"
                        bindblur="{{ phoneNumberBlur }}"
                        maxlength="11"
                />
            </view>
            <view class="weui-dialog__ft">
                <button class="weui-dialog__btn weui-dialog__btn_default" wx:if="{{ showCancel }}" bindtap="{{ dialogCancel }}">{{ cancelText }}</button>
                <button class="weui-dialog__btn weui-dialog__btn_primary" formType="submit" disabled="{{ confirmDisabled }}">{{ confirmText }}</button>
            </view>
        </form>
    </view>
</template>